{
  "name": "fire-sale",
  "version": "1.0.0",
  "description": "Markdown editer/viewer.",
  "productName": "Fire Sale",
  "main": "./app/main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build-mac && npm run build-win && npm run build-linux",
    "build-mac": "electron-packager . --platform=darwin --out=build --asar --overwrite",
    "build-win": "electron-packager . --platform=win32 --out=build --asar --overwrite",
    "build-linux": "electron-packager . --platform=linux --out=build --asar --overwrite",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "markdown"
  ],
  "author": "Ahmed Soliman",
  "license": "ISC",
  "dependencies": {
    "electron": "^5.0.6",
    "eslint": "^6.0.1",
    "marked": "^0.6.2"
  },
  "devDependencies": {
    "electron-packager": "^14.0.2",
    "eslint-plugin-class-property": "^1.1.0"
  }
}
